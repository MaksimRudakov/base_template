@media screen 
    body
        margin 0 !important
        font-family 'Roboto', sans-serif !important
    .print
        display none
    .button
        display inline-block
        vertical-align: middle
        width 40%
        button
            background-color #428bca
            border-color #357ebd
            display inline-block
            padding 4px 16px
            margin-bottom 0
            font-size 18px
            font-weight 700
            font-weight normal
            line-height 1.42857143
            text-align center
            white-space nowrap
            vertical-align middle
            cursor pointer
            user-select none
            background-image none
            border 1px solid transparent
            border-radius 4px
            color #fff
            &:hover
                background-color #3071a9
                border-color #285e8e
    .wrapper
        font-size 0
        width 100%
        background-color white
        text-align left
        padding 15px 10px
        box-sizing border-box
    .link
        display inline-block
        vertical-align: middle
        text-align: right 
        width 60%
        #modal-link
            display inline-block
            vertical-align middle
            font-size 16px
            text-decoration: none
            cursor pointer
            color #3071a9
            &:hover
                color: #285e8e
    .screen
        display block
        width 100%
        position relative
        background-image url('https://online.theeurasia.kz/Cabinet/Images/Background/ogpo_vts_camry02.jpg')
        width 100%
        background-repeat no-repeat
        background-size cover
        padding 100px 0
        background-attachment fixed
        box-sizingborder-box
    .type
        width 100%
        margin-bottom 100px
        color white
        text-shadow 0px 0px 10px rgba(0,0,0,1)
        text-align center
        padding 20px 10px
        box-sizing border-box
        background linear-gradient(95deg, rgba(47, 50, 74, 0.8) 20%, rgba(66, 72, 103, 0.8) 80%)
    .container
        width 1140px
        margin 0 auto
        box-sizing border-box
    .screen .container h1
        display block
        margin-bottom 100px
        text-shadow 0px 0px 10px rgba(0,0,0,1)
        color white
    .info
        width 100%
        border-radius 5px
        background linear-gradient(95deg, rgba(47, 50, 74, 0.7) 20%, rgba(66, 72, 103, 0.7) 80%)
        margin-bottom 50px
        padding-bottom 25px
    .info-title
        text-shadow 0px 0px 10px rgba(0,0,0,1)
        font-size 24px
        text-align center
        color white
        padding 25px 0 15px 0
        box-sizing border-box
    .data
        font-size 0
        width 100%
        margin-bottom -1px
        box-sizing border-box
    .dataW
        font-size 0
        width 100%
        margin-bottom -1px
        background-color white
        box-sizing border-box
    .dataW-text
        font-size 16px
        width 100%
        text-align center
        background-color white
        padding 10px 10px
        color #333
        margin-bottom 20px
        box-sizing border-box
    .data-titles
        display inline-block
        width 40%
        vertical-align middle
        padding 15px 10px
        background-color rgba(255,255,255,1)
        font-size 14px
        box-sizing border-box
        color #333
    .data-titles span
        font-weight 700
    .data-info
        display inline-block
        width 60%
        vertical-align middle
        padding 15px 30px
        box-sizing border-box
        color white
        font-size 18px
        text-shadow 0px 0px 10px rgba(0,0,0,1)
    .data-infoW span
        font-size 13px
    .data-infoW
        display inline-block
        width 60%
        vertical-align middle
        padding 15px 30px
        box-sizing border-box
        font-size 18px
        color #333
        box-sizing border-box
    .vehicle, .driver
        border-top 10px solid white

    @media screen and (min-width 768px) and (max-width 1139px)
        .container
            width 100%
            box-sizing border-box
        .screen .container h1
            font-size 30px
            padding 0 10px
        .info-title
            font-size 24px
        .data-titles
            width 100%
        .data-infoW
            width 100%
            padding 0 10px 25px 10px
        .data-info
            width 100%
            text-align center
            padding 15px 10px
        .info
            border-radius 0
        .dataW-text
            margin-bottom 0
        .dataW
            border-top 1px solid rgb(47, 50, 74)
        .vehicle, .driver
            border-top none
        .buttonPrint
            width 100%
        .screen
            padding-bottom 0
        .info-title
            padding 40px 0 15px 0

    @media screen and (max-width 767px)
        .container
            width 100%
            box-sizing border-box
        .screen .container h1
            font-size 20px
            padding 0 10px
        .info-title
            font-size 18px
        .data-titles
            width 100%
        .data-infoW
            width 100%
            padding 0 10px 25px 10px
        .data-info
            width 100%
            text-align center
            padding 15px 10px
        .info
            border-radius 0
        .dataW-text
            margin-bottom 0
        .dataW
            border-top 1px solid rgb(47, 50, 74)
        .vehicle, .driver
            border-top none
        .buttonPrint
            width 100%
        .screen
            padding-bottom 0
        .info-title
            padding 40px 10px 15px 10px
